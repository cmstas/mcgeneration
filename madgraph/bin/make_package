#!/bin/bash

SAMPLE=$1

if [[ "$SAMPLE" != "" && -d cards/$SAMPLE ]]; then

    mkdir -p packages
    mkdir -p workdir

    cp make_gridpack.sh workdir/
    cp runcms*.sh workdir/

    mkdir -p workdir/cards
    cp -R cards/$SAMPLE workdir/cards/

    cp -R metadata workdir/
    cp -R models workdir/
    cp -R patches workdir/
    cp -R utilities workdir/

    tar -zcvf packages/${SAMPLE}.tar.gz workdir

    rm -rf workdir
fi
